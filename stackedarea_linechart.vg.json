{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f0efdd",
  "vconcat": [
    {
      "width": 520,
      "height": 180,
      "title": {
        "text": "Different Types of Crop Production Trends Over Time",
        "fontSize": 16,
        "color":"#636363",
        "offset":2
      },
      "data": {
        "url": "agriculture_productivity_by_country_year.csv",
        "format": {"type": "csv"}
      },
      "layer": [
        {
          "selection": {
            "hover": {
              "type": "multi",
              "fields": ["Crop_Type"],
              "on": "mouseover",
              "clear": "mouseout",
              "empty": "all"
            }
          },
          "mark": {"type": "area", "line": true, "point": true},
          "encoding": {
            "x": {
              "field": "Year",
              "type": "temporal",
              "axis": {
                "title": "Year",
                "titleColor":"grey",
                "format": "%Y",
                "tickCount": 24,
                "titlePadding":10
              }
            },
            "y": {
              "field": "Crop_Yield_MT_per_HA",
              "type": "quantitative",
              "aggregate": "sum",
              "axis": {
                "title": "Total Crop Yield (Metric Tons per Hectare)",
                "titleColor":"grey"
              }
            },
            "color": {
              "field": "Crop_Type",
              "type": "nominal",
              "scale": {
                "range": [
                  "#264e70",
                  "#ffca7a",
                  "#f9b4ab",
                  "#3a9efd",
                  "#679186",
                  "#e4f6f5",
                  "#96adbe",
                  "#fdebd3",
                  "#dad874",
                  "#bbd4ce"
                ]
              },
              "legend": {
                "title": "Crop Type",
                "titleFontSize": 12,
                "titleColor": "#636363",
                "titleFontWeight":"normal",
                "labelColor": "#636363",
                "offset": 10
              }
            },
            "opacity": {
              "condition": {"param": "hover", "value": 1},
              "value": 0.3
            },
            "tooltip": [
              {"field": "Year", "type": "temporal", "title": "Year", "format":"%Y"},
              {"field": "Crop_Type", "type": "nominal", "title": "Crop Type"},
              {
                "field": "Crop_Yield_MT_per_HA",
                "type": "quantitative",
                "title": "Crop Yield (Metric Tons per Hectare)",
                "aggregate": "sum"
              }
            ]
          }
        }
      ],
      "transform": [
        {
          "filter": {"param": "brush"}
        }
      ]
    },
    {
      "width": 520,
      "height": 80,
      "mark": "line",
      "title": {
        "text": "Yearly Crop Production Summary",
        "fontSize": 16,
        "color":"#636363",
        "offset":2
      },
      "params": [
        {
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "data": {
        "url": "agriculture_total_productivity_year.csv",
        "format": {"type": "csv"}
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "title": "Year",
            "format": "%Y",
            "tickCount": 24,
            "titleColor":"grey"
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "Crop_Yield_MT_per_HA",
          "type": "quantitative",
          "axis": {
            "title": ["Total Crop Yield", "(Metric Tons per Hectare)"],
            "titleColor":"grey"
          },
          "scale": {"domain": [500, 800]}
        },
        "color": {"value": "grey"},
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year", "format":"%Y"},
          {
            "field": "Crop_Yield_MT_per_HA",
            "type": "quantitative",
            "title": "Total Crop Yield (Metric Tons per Hectare)",
            "aggregate": "sum"
          }
        ]
      }
    }
  ]
}