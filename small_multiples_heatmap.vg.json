{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f0efdd",
  "hconcat": [
    {
      "title": {
        "text": ["Average Carbon Dioxide (CO2) Emissions",""],
        "fontSize": 16,
        "color":"#636363"
      },
      "data": {
        "url": "countries_co2_emission_2015_to_2020.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "fold": ["2015", "2016", "2017", "2018", "2019", "2020"],
          "as": ["Year", "CO2_Emissions"]
        }
      ],
      "params": [
        {"name": "highlight", "select": "point"}
      ],
      "mark": {"type": "rect", "strokeWidth": 2},
      "width": 200,
      "height": 200,
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"title": "Year","titleColor":"grey"}
        },
        "y": {
          "field": "Country_Name",
          "type": "nominal",
          "axis": {"title": "Country","titleColor":"grey"}
        },
        "color": {
          "field": "CO2_Emissions",
          "type": "quantitative",
          "scale": {"scheme": "purples"},
          "legend":{"title":["CO2 Emissions", "(metric tons per capita)"], "orient": "bottom", "titleFontSize": 12,"titleColor": "#636363", "titleFontWeight":"normal","labelColor":"#636363","offset":50}
        },
        "stroke": {
          "condition": {"param": "highlight", "empty": false, "value": "black"},
          "value": null
        },
        "opacity": {
          "condition": {"param": "highlight", "value": 1},
          "value": 0.5
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "CO2_Emissions", "type": "quantitative", "title": "C02 Emissions (Metric Tons per Capita)", "format":".3f"}
        ]
      }
    },
    {
      "title": {
        "text": ["Average Land Surface Temperature",""],
        "fontSize": 16,
        "color":"#636363"
      },
      "data": {
        "url": "countries_land_surface_temperature_2015_to_2020.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "fold": ["2015", "2016", "2017", "2018", "2019", "2020"],
          "as": ["Year", "Land_Surface_Temperature"]
        }
      ],
      "params": [
        {"name": "highlight", "select": "point"}
      ],
      "mark": {"type": "rect", "strokeWidth": 2},
      "width": 200,
      "height": 200,
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"title": "Year","titleColor":"grey"}
        },
        "y": {
          "field": "Country_Name",
          "type": "nominal",
          "axis": {"title": "Country","titleColor":"grey"}
        },
        "color": {
          "field": "Land_Surface_Temperature",
          "type": "quantitative",
          "scale": {"scheme": "oranges"},
          "legend":{"title": ["Temperature (Â°C)",""], "orient": "bottom","titleFontSize": 12,"titleColor": "#636363", "titleFontWeight":"normal","labelColor":"#636363","offset":50}
        },
        "stroke": {
          "condition": {"param": "highlight", "empty": false, "value": "black"},
          "value": null
        },
        "opacity": {
          "condition": {"param": "highlight", "value": 1},
          "value": 0.5
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Land_Surface_Temperature", "type": "quantitative", "title": "Temperature (Celcius Degree)", "format":"0.3f"}
        ]
      }
    },
    {
      "title": {
        "text": ["Average Precipitation-Evapotranspiration", "Index"],
        "fontSize": 16,
        "color":"#636363"
      },
      "data": {
        "url": "countries_precipitation_evaporation_2015_to_2020.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "fold": ["2015", "2016", "2017", "2018", "2019", "2020"],
          "as": ["Year", "Precipitation_Evapotranspiration_Index"]
        }
      ],
      "params": [
        {"name": "highlight", "select": "point"}
      ],
      "mark": {"type": "rect", "strokeWidth": 2},
      "width": 200,
      "height": 200,
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"title": "Year","titleColor":"grey"}
        },
        "y": {
          "field": "Country_Name",
          "type": "nominal",
          "axis": {"title": "Country","titleColor":"grey"}
        },
        "color": {
          "field": "Precipitation_Evapotranspiration_Index",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "legend":{"title": ["Precipitation-Evapotranspiration","Index"], "orient": "bottom","titleFontSize": 12,"titleColor": "#636363", "titleFontWeight":"normal","labelColor":"#636363","offset":50}
        },
        "stroke": {
          "condition": {"param": "highlight", "empty": false, "value": "black"},
          "value": null
        },
        "opacity": {
          "condition": {"param": "highlight", "value": 1},
          "value": 0.5
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Precipitation_Evapotranspiration_Index", "type": "quantitative", "title": "Precipitation-Evapotranspiration Index", "format":"0.3f"}
        ]
      }
    }
  ],
  "resolve": {
    "scale": {"color": "independent"} 
  },
  "spacing": 180,
  "bounds": "flush",
  "align": "each"

  }
